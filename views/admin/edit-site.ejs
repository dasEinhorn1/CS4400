<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Edit Site (20)</title>
    <% include ../../partials/head %>
  </head>
  <body>
    <h1 class="title --centered">Edit Site</h1>
    <form action="" method="POST">
      <div class="input-row">
        <div class="labelled-input">
          <label for="siteName">Name</label>
          <input type="text" name="siteName" value="<%= site.SiteName %>" />
        </div>
        <div class="labelled-input">
          <label for="zipcode">Zipcode</label>
          <input type="text" name="zipcode" value="<%= site.SiteZipcode %>" />
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="address">Address</label>
          <input type="text" name="address" value="<%= site.SiteAddress %>" />
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="password">Manager</label>
          <select name="manager" id="">
            <% managers.forEach(manager => { if (site.Username ==
            manager.Username) { %>
            <option value="<%= site.Username %>" selected
              ><%= site.fullName%></option
            >
            <% } else { %>
            <option value="<%= site.Username %>"><%= manager.fullName%></option>
            <% } }) %>
          </select>
        </div>
        <div class="labelled-input">
          <label for="">Open Everyday</label>
          <select class="dropdown" name="openEveryday">
            <% if (site.openEveryday == 'Yes') { %>
            <option value="true" selected>Yes</option>
            <option value="false">No</option>
            <% } else { %>
            <option value="true">Yes</option>
            <option value="false" selected>No</option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="button-row --centered">
        <a href="/admin/sites">
          <button class="btn" type="button" name="back">Back</button>
        </a>
        <button class="btn" type="submit">Update</button>
      </div>
      <input type="hidden" name="originalSiteName" value="<%= site.SiteName %>"/>
    </form>
  </body>
</html>
