<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <%# Screen 25 %>
    <h1 class="title --centered">Manage Event</h1>
    <form class="" action="/manager/events" method="get">
      <div class="input-row">
        <div class="labelled-input">
          <label for="Name">Name</label>
          <input type="text" name="name" value="" />
        </div>
        <div class="labelled-input">
          <label for="Name">Description Keyword</label>
          <input type="text" name="keyword" value="" />
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="Name">Start Date</label>
          <input type="text" name="startDate" value="" />
        </div>
        <div class="labelled-input">
          <label for="Name">End Date</label>
          <input type="text" name="endDate" value="" />
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="duration">Duration Range</label>
          <input class="--little" type="text" name="lowerDuration" value=""/>
          &nbsp;&mdash;&nbsp;
          <input class="--little" type="text" name="upperDuration" value=""/>
        </div>
        <div class="labelled-input">
          <label for="visitRange">Total</label>
          <input class="--little" type="text" name="lowerVisit" value=""/>
          &nbsp;&mdash;&nbsp;
          <input class="--little" type="text" name="upperVisit" value=""/>
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="revenueRange">Total Revenue Range</label>
          <input class="--little" type="text" name="lowerRevenue" value="" />
          &nbsp;&mdash;&nbsp;
          <input class="--little" type="text" name="upperRevenue" value="" />
        </div>
      </div>
      <div class="button-row">
        <div class="button-row-left">
          <button type="button" name="filter">Filter</button>
        </div>
        <div class="button-row-right">
          <button type="button" name="create">Create</button>
          <button type="button" name="edit">View/Edit</button>
          <button type="button" name="delete">Delete</button>
        </div>
      </div>
    </form>
    <table>
      <tr>
        <th>Name</th>
        <th>Staff Count</th>
        <th>Duration (days)</th>
        <th>Total Visits</th>
        <th>Total Revenue ($)</th>
      </tr>
      <tr>
        <td>Bus Tour</td>
        <td>4</td>
        <td>1</td>
        <td>80</td>
        <td>2000</td>
      </tr>
    </table>
    <div class="button-row --centered">
      <a class="btn-link" href="/dashboard">
        <button class="btn" type="button" name="back">Back</button>
      </a>
    </div>
  </body>
</html>
