<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../partials/head %>
    <title>Event Detail</title>
  </head>
  <body>
    <h1 class="title --centered">Site Detail</h1>
    <div class="input-row">
      <div class="labelled-input">
        <label for="site">Site</label>
        <input type="text" name="site" value="" disabled>
      </div>
      <div class="labelled-input">
        <label for="openEveryday">Open Everyday</label>
        <select class="dropdown" name="openEveryday" disabled>
          <option value="true">Yes</option>
          <option value="false">No</option>
          <option value="all" selected>&mdash; ALL &mdash;</option>
        </select>
      </div>
    </div>
    <div class="input-row">
      <div class="labelled-input">
        <label for="address">Address</label>
        <input type="text" name="address" value="" disabled>
      </div>
    </div>
    <form class="" action="" method="">
      <div class="input-row">
        <div class="labelled-input --centered">
          <label for="visitDate">Visit Date</label>
          <input type="text" name="visitDate" value="">
        </div>
        <button class="btn" type="submit">Log Visit</button>
      </div>
    </form>
    <div class="button-row --centered">
      <a class="btn-link" href="/visit/sites">
        <button class="btn" type="button" name="back">Back</button>
      </a>
    </div>
  </body>
</html>
