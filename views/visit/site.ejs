<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../partials/head %>
    <title>Event Detail</title>
  </head>
  <body>
    <h1 class="title --centered">Site Detail</h1>
    <div class="input-row">
      <div class="labelled-input">
        <label for="site">Site</label>
        <input type="text" name="site" value="<%= site.name %>" disabled>
      </div>
      <div class="labelled-input">
        <label for="openEveryday">Open Everyday</label>
        <select class="dropdown" name="openEveryday" disabled>
          <option value="true"
            <%= (site.openEveryday) ? 'selected' : '' %>>
            Yes
          </option>
          <option value="false"
            <%= (!site.openEveryday) ? 'selected' : '' %>>
            No
          </option>
        </select>
      </div>
    </div>
    <div class="input-row">
      <div class="labelled-input">
        <label for="address">Address</label>
        <input type="text"
          name="address"
          value="<%= [site.address, site.city, site.state, site.zipcode].join(', ') %>"
          disabled>
      </div>
    </div>
    <form class="" action="" method="post">
      <div class="input-row">
        <div class="labelled-input --centered">
          <label for="visitDate">Visit Date</label>
          <input type="text" name="visitDate" value="">
        </div>
        <input type="hidden" name="site" value="<%= site.name %>">
        <button class="btn" type="submit">Log Visit</button>
      </div>
    </form>
    <div class="button-row --centered">
      <a class="btn-link" href="/visit/sites">
        <button class="btn" type="button" name="back">Back</button>
      </a>
    </div>
  </body>
</html>
