<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
    <title>Transit History</title>
  </head>
  <body>
    <%# Screen 25 %>
    <h1 class="title --centered">Transit History</h1>
    <form class="" action="/transit/history" method="get">
      <div class="input-row">
        <div class="labelled-input">
          <label for="transportType">Transport Type</label>
          <input type="text" name="transportType" value=""/>
        </div>
        <div class="labelled-input">
          <label for="site">Contain Site</label>
          <input type="text" name="site" value=""/>
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="route">Route</label>
          <input type="text" name="route" value=""/>
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="Name">Start Date</label>
          <input type="text" name="startDate" value=""/>
        </div>
        <div class="labelled-input">
          <label for="Name">End Date</label>
          <input type="text" name="endDate" value=""/>
        </div>
      </div>
      <div class="button-row --centered">
        <button class="btn" type="button" name="filter">Filter</button>
      </div>
    </form>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Route</th>
          <th>Transport Type</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>2019-02-01</td>
          <td>816</td>
          <td>Bus</td>
          <td>$2.50</td>
        </tr>
      </tbody>
    </table>
    <div class="button-row --centered">
      <a class="btn-link" href="/dashboard">
        <button class="btn" type="button" name="back">Back</button>
      </a>
    </div>
  </body>
</html>
