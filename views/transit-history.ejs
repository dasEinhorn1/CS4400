<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
    <title>Transit History</title>
  </head>
  <body>
    <%# Screen 25 %>
    <h1 class="title --centered">Transit History</h1>
    <form class="" action="/transits/history" method="get">
      <div class="input-row">
        <%- include('../partials/transport-selector', {
          selected: formValues.transportType
        }) %>
        <%- include('../partials/site-selector', {
          sites: sites,
          selected: formValues.site,
          label: 'Contain Site'
        }) %>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="route">Route</label>
          <input type="text" name="route" value="<%= formValues.route %>"/>
        </div>
      </div>
      <div class="input-row">
        <div class="labelled-input">
          <label for="Name">Start Date</label>
          <input type="text" name="startDate" value="<%= formValues.startDate %>"/>
        </div>
        <div class="labelled-input">
          <label for="Name">End Date</label>
          <input type="text" name="endDate" value="<%= formValues.endDate %>"/>
        </div>
      </div>
      <div class="button-row --centered">
        <button class="btn" type="submit">Filter</button>
      </div>
    </form>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Route</th>
          <th>Transport Type</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% transitsTaken.forEach((transit) => { %>
        <tr>
          <td><%= transit.dateTaken %></td>
          <td><%= transit.route %></td>
          <td><%= transit.type %></td>
          <td><%= transit.price %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="button-row --centered">
      <a class="btn-link" href="/dashboard">
        <button class="btn" type="button" name="back">Back</button>
      </a>
    </div>
  </body>
</html>
