<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
    <title>Dashboard</title>
  </head>
  <body>
    <h1 class="title --centered">Dashboard</h1>
    <div class="two-column">
      <% if (isAdmin || isStaff || isManager) { %>
        <a class="btn-link" href="/profile">
          <button class="btn --centered">Manage profile</button>
        </a>
      <% } %>
      <% if (isStaff) { %>
        <a class="btn-link" href="/staff">
          <button class="btn --centered">View Schedule</button>
        </a>
      <% } %>
      <% if (isManager) { %>
        <a class="btn-link" href="/manager/events">
        <button class="btn --centered">Manage Event</button>
        </a>
        <a class="btn-link" href="/manager/events/staff">
          <button class="btn --centered">View Staff</button>
        </a>
        <a class="btn-link" href="/manager/site">
          <button class="btn --centered">View Site Report</button>
        </a>

      <% } %>
      <% if (isAdmin) { %>
        <a class="btn-link" href="/admin/users">
          <button class="btn --centered">Manage User</button>
        </a>
        <a class="btn-link" href="/admin/transits">
          <button class="btn --centered">Manage Transit</button>
        </a>
        <a class="btn-link" href="/admin/sites">
          <button class="btn --centered">Manage Site</button>
        </a>
      <% } %>
      <% if (isVisitor) { %>
        <a class="btn-link" href="/visit/events">
          <button class="btn --centered">Explore Event</button>
        </a>
        <a class="btn-link" href="/visit/sites">
          <button class="btn --centered">Explore Site</button>
        </a>
        <a class="btn-link" href="/visit/history">
          <button class="btn --centered">View Visit History</button>
        </a>
      <% } %>
      <a class="btn-link" href="/transits">
        <button class="btn --centered">Take Transit</button>
      </a>
      <a class="btn-link" href="/transits/history">
        <button class="btn --centered">View Transit History</button>
      </a>
      <a class="btn-link" href="/logout">
        <button class="btn --centered">Back</button>
      </a>
    </div>
  </body>
</html>

<style media="screen">
  .two-column {
    width: 100%;
  }
  .two-column > * {
    float: left;
    display: block;
    width: 44%;
    margin-left: 5%;
    margin-bottom: 30px;
  }
</style>
